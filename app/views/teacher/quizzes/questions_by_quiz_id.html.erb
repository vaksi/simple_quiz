<div class="right_col" role="main">
        <div class="">

          <div class="page-title">
            <div class="title_left">
              <h3>Quiz</h3>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2><%= @quiz.title %></h2>
                  
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <table class="table">
                      <thead>
                        <tr>
                          <th>Question</th>
                          <th>Answer</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% @questions.each do |question|%>
                        <tr>
                          <td><%= question.description %></td>
                          <td><%= question.answer_digest %></td>
                          <td><%= link_to 'Edit', edit_teacher_question_path(question) %>|<%= link_to 'Delete',  { action: :destroy, id: question.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>   
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  <div class="x_title">
                  <h2>New Quiz<small>Create</small></h2>
                  
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br />
                  <form for="questions" action="/teacher/questions" method="post" data-parsley-validate class="form-horizontal form-label-left">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <input type="hidden" name="question[quiz_id]" value="<%= @quiz.id %>">
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title">Question Title <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" id="description" name="question[description]" required="required" class="form-control col-md-7 col-xs-12">
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title">Answer Digest <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" id="answer_digest" name="question[answer_digest]" required="required" class="form-control col-md-7 col-xs-12">
                      </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="submit" class="btn btn-primary">Cancel</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                      </div>
                    </div>

                  </form>
                </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

    </div>
</div>
      <!-- /page content -->